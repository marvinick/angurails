<%= simple_form_for @picture, :html => {:class => 'form-signin'} do |f| %>

 <%= f.error_notification %>
  <%= f.input :title, label: false, placeholder: "title", input_html: {class: "form-control"} %>
  <%= f.input :price, label: false, placeholder: "price", input_html: {class: "form-control"} %>
  <%= f.file_field :image %>
  <br>
  <%= f.button :submit, class:"btn btn-info btn-lg" %>
<% end %>
 

