<h1 class="text-center">Log in</h1>
<hr>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-lg-4">
    <center>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder:"enter email" %>
      </div>
      <br>
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder:"enter password" %>
      </div>
      <br>
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
      <br>
      <div class="actions">
        <%= f.button :submit,  class:"btn btn-default btn-lg" %>
      </div>
    <% end %>
    </center>
  </div>
  <div class="col-md-2"></div>
  <div class="col-md-4">
    <br>
    <center>
      <%= render "devise/shared/links" %>
    </center>
  </div>
  <div class="col-md-1"></div>
</div>
