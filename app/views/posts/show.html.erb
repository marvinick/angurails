<div class="row">
	<div class="col-md-6">
		<h2><%= @post.title %></h2>
		<%= link_to "Edit", edit_post_path %> | | <%= link_to "Delete", post_path, method: :delete %> | | <%= link_to "Back", :back %>
		<hr>
		<%= @post.description %>

	</div>
	<div class="col-md-6">
		<%= form_for [@post, @picture], :html => {:multipart => true} do |f| %>

		  <p>
		    <%= f.label :title %><br />
		    <%= f.text_field :title %>
		  </p>
		  <p>
		    <%= f.label :price %><br />
		    <%= f.text_field :price %>
		  </p>
		  <p>
		    <%= f.label :description %><br />
		    <%= f.text_area :description, :cols => "40", :rows => "5" %>
		  </p>

		 <p>
		   <%= f.file_field :image %>
		 </p>

		 <br>
		  <p><%= f.button :submit, class:"btn btn-default btn-lg" %></p>
		<% end %>
	</div>
</div>
