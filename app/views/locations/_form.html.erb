<%= simple_form_for @location, :html => {:class => 'form-signin' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :address, label: false, placeholder: "street and/or city" %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-info btn-lg" %>
  </div>
<% end %>
